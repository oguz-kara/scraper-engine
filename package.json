{
  "name": "scraper-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:api": "pnpm --filter @scraper/api dev",
    "dev:web": "pnpm --filter web dev",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "build:api": "pnpm --filter @scraper/api build",
    "build:web": "pnpm --filter web build",
    "build:all": "pnpm -r build",
    "start:web": "pnpm --filter web start",
    "lint:web": "pnpm --filter web lint",
    "codegen:web": "pnpm --filter web generate"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}