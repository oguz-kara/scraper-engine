# Database
DATABASE_URL="postgresql://scraper:scraper@localhost:5432/scraper_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application
NODE_ENV=development
PORT=3000

# GraphQL
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEBUG=true

# Job Queue
MAX_CONCURRENT_JOBS_PER_PROVIDER=1
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Scraper Settings
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000
PAGE_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json