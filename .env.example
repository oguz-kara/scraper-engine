# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5435/scraper_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# Application
NODE_ENV=development
PORT=3000

# GraphQL
GRAPHQL_PLAYGROUND=true
GRAPHQL_DEBUG=true

# Job Queue
MAX_CONCURRENT_JOBS_PER_PROVIDER=1
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Scraper Settings
HEADLESS_BROWSER=false
BROWSER_TIMEOUT=60000
BROWSER_SLOWMO_MS=100
BROWSER_DEVTOOLS=true
BROWSER_CHANNEL=chrome
PAGE_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000

# Browser Settings
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Scraping Delays
RATE_LIMIT_DELAY_MIN=1000
RATE_LIMIT_DELAY_MAX=3000
CHECKPOINT_INTERVAL=50

# Checkpoint Configuration
CHECKPOINT_ENABLED=true
CHECKPOINT_INTERVAL_SECONDS=60
CHECKPOINT_INTERVAL_ITEMS=100
CHECKPOINT_SAVE_ON_PAUSE=true
CHECKPOINT_SAVE_ON_ERROR=true
MAX_CHECKPOINTS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json